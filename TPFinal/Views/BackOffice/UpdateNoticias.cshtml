@using TPFinal.Models
@model Noticias

@{
    <h2>Actualizar Noticias</h2>
}

@using (Html.BeginForm("UpdateNoticias", "BackOffice", FormMethod.Get))

{
    <p>Seleccione la noticia que desea actualizar:</p> @Html.DropDownListFor(Model => Model.IdNoticia, new SelectList(ViewBag.ListaNoticias, "IdNoticia", "Titulo"))
    <p>Titulo de la noticia:</p> @Html.TextBoxFor(model => model.Titulo) <br />
    <p>Descripcion:</p> @Html.TextBoxFor(model => model.Descripcion)
    <p>Multimedia:</p> @Html.TextBoxFor(model => model.Multimedia, new { type = "file" })<br />
    <p>Categoria:</p> @Html.DropDownListFor(Model => Model.fkCategoria, new SelectList(ViewBag.TraerCategoria, "IdCategoria", "Categoria"))

    <input type="submit" value="Enviar" />
}


